<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <record id='fleet_vehicle_view_inherit_distpatch_form' model='ir.ui.view'>
        <field name="name">fleet_vehicle_view_inherit_distpatch_form</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <label for="weight_vehicle"/>
                <div class="o_row">
                    <field name="weight_vehicle"/><span>kg</span>
                </div>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_picking_distpatch_line_form">
        <field name="name">picking.distpatch.line.form</field>
        <field name="model">picking.distpatch.line</field>
        <field name="arch" type="xml">
            <form>
                <notebook>
                    <page string="Albaranes">
                        <!-- domain="[('comisiones_agrupacion_id','=',False)]" -->
                        <field name="detalle_id" domain="[('state','in',['done']),('picking_type_id.code','=','outgoing'),('invoice_id','!=',False),('picking_distpatch_id','=',False)]">
                            <tree editable="bottom">		
                                <field name="name"/>
                                <field name="numberg"/>
                                <field name="partner_id"/>
                                    <field name="scheduled_date" readonly="1"/>
                                    <field name="origin" readonly="1"/>
                                    <field name="peso_picking_it" readonly="1"/>
                                    <field name="state" readonly="1"/>
                                    <field name="company_id" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>

                <footer>
                    <button string="Agregar Albaranes" class="btn btn-primary" type="object" name="agregar" />						
                </footer>
            </form>
        </field>
    </record>





    
</odoo>