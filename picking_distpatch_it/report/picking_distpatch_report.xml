<?xml version='1.0' encoding='utf-8'?>
<odoo>




    <template id="report_picking_distpach_guias_hemocare_it">
        <t t-call="web.html_container">

            <t t-foreach="docs" t-as="o">
                <div class="header" style="font-size: 13px;  
                                            padding: 13px; 
                                            margin-left: -15px;
                                            margin-right: -15px;" >
                    <div class="row">
                        <div class="col-4 row text-center">                            
                            <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)"  alt="Logo" style="max-height: 100px; max-width: 200px; vertical-align: baseline; " />
                            <br/><span class="text-center" t-field="o.company_id.street"/><br/>
                            Telf: <span t-field="o.company_id.phone"/><br/>                                                        
                        </div>  
                        <div class="col-2"/>  
                        <div class="col-6 text-center" style="font-size: 16px; border: 1px negro sólido; margin-left:200px;" align="right">
                            <table>
                                <thead>
                                    <tr>
                                        <th align="center" style="border: 2px solid #9c9c9c; padding: 20px 25px;">
                                            <div>
                                                RUC: <span class="text-center" t-field="o.company_id.vat"/><br/><br/>
                                                <h4 class="text-center">DESPACHO DE MERCADERÍA</h4>
                                                <h5 class="text-center">Nro: <span t-field="o.name"/></h5>
                                            </div>
                                        </th>
                                    </tr>
                                </thead>
                            </table>                            
                        </div>                                    
                    </div>                                       
                  
                </div>
                <div class="footer" align="center" style="font-size: 12px;">
                     <div class="col-xs-12">
                        <span t-field="o.company_id.name"/> <br/>
                    </div>
                    <div class="col-xs-12">
                        RUC: <span t-field="o.company_id.vat"/> -
                        Correo: <span t-field="o.company_id.email"/><br/>
                    </div>
                    <div class="col-xs-12">
                        <span t-field="o.company_id.website"/><br/>
                    </div>
                    <div class = "text-center" style = "border-top: 1px negro sólido;">
                        <ul class = "list-inline">
                            <li> Página: <span class = "page"/>
                                /<span class = "topage" /> </li>
                        </ul>
                    </div>
                </div>

                <div t-attf-class="article o_report_layout_standard o_company_#{o.company_id.id}_layout"  t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
  
                        <div class="page"> 
                            <div class="row">
                                <div class="col-3" >
                                        <span><strong>Fecha Despacho:</strong></span>
                                        <p t-field="o.date_order"/>
                                </div>
                                <div class="col-3" >
                                        <span><strong>Usuario:</strong></span>
                                        <p t-field="o.picker_id"/>                                        
                                </div>
                                <div class="col-3" >
                                        <span><strong>Unidad de Transporte:</strong></span>
                                        <p t-field="o.fleet_vehicle_id"/>
                                </div>
                                <div class="col-3" >
                                        <span><strong>Conductor:</strong></span>
                                        <p t-field="o.fleet_vehicle_id.driver_id"/>
                                </div>
                            </div>
                            

                            <div class="row">
                                <div class="col-3" >
                                        <span><strong>Peso Max. Transporte:</strong></span>
                                        <p t-field="o.peso_total"/>
                                </div>
                                <div class="col-3" >
                                        <span><strong>Peso Total:</strong></span>
                                        <p t-field="o.total_albaranes"/>
                                </div>
                            </div>
                            <table class="table table-sm" >
                                <thead>
                                    <tr>
                                        <th name="th_product">
                                            <strong>Albaran</strong>
                                        </th>
                                        <th>
                                            <strong>Factura</strong>
                                        </th>
                                        <th>
                                            <strong>Nro Guia</strong>
                                        </th>
                                        <th>
                                            <strong>Producto</strong>
                                        </th>
                                        <th>
                                            <strong>Peso</strong>
                                        </th>
                                        <th>
                                            <strong>Cantidad</strong>
                                        </th>
                                        <th>
                                            <strong>Cliente</strong>
                                        </th>
                                        <th>
                                            <strong>Dirección</strong>
                                        </th>
                                        <th>
                                            <strong>Distrito</strong>
                                        </th>
                                        <th>
                                            <strong>Provincia</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <t t-foreach="o.related_picking_ids" t-as="albaran">
                                    <t t-foreach="albaran.move_ids_without_package.sorted(key=lambda m: m.product_id.id)" t-as="move">                                     
                                        
                                            <tr>
                                                <td>
                                                    <span t-field="albaran.name"/>
                                                </td>
                                                <td>
                                                    <span t-field="albaran.invoice_id"/>
                                                </td>
                                                <td>
                                                    <span t-field="albaran.numberg"/>
                                                </td>
                                                <td>
                                                    <span t-field="move.product_id"/>
                                                </td>
                                                <td>
                                                    <span t-esc="move.product_id.weight * move.product_uom_qty"/>
                                                </td>
                                                <td>
                                                    <span t-field="move.product_uom_qty"/>
                                                </td>
                                                <td>
                                                    <span t-field="albaran.partner_id"/>
                                                </td>
                                                <td>
                                                    <span t-field="albaran.ending_point"/>
                                                </td>
                                                <td>
                                                    <span t-field="albaran.distrito"/>
                                                </td>
                                                <td>
                                                    <span t-field="albaran.provincia"/>
                                                </td>
                                            </tr>
                                    </t>
                                    </t>
                                  </tbody>
                            </table>
                        </div>                   
                </div>
            </t>
        </t>
    </template>



        <record id="paperformat_despacho_it" model="report.paperformat">
            <field name="name">Reporte Despacho</field>
            <field name="default" eval="False" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">50</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">45</field>
            <field name="dpi">90</field>
        </record>


    <report 
        id="action_report_picking_distpatch_it"
        string="Impresión de Picking"
        model="picking.distpatch.it" 
        report_type="qweb-pdf"
        file="picking_distpatch_it.report_picking_distpach_guias_hemocare_it" 
        name="picking_distpatch_it.report_picking_distpach_guias_hemocare_it"
        paperformat="picking_distpatch_it.paperformat_despacho_it"            
        print_report_name="'Orden de Despacho N° - %s' % (object.name)"
        />
</odoo>